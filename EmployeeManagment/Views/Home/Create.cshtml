@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Create Employee";
}

    <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-5">
    <div asp-validation-summary="All" class="text-danger mb-4"></div>
    
    <div class="form-group row  mt-3">
    <label asp-for="Name" class="col-sm-2  col-form-label"></label>
    <div class="col-sm-10">
            <input asp-for="Name" class="form-control ml-3" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger ml-3"></span>
    </div>
    </div>

    <div class="form-group row mt-3">
        <label asp-for="Email" class="col-sm-2  col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control ml-3" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger ml-3"></span>
        </div>
    </div>

    <div class="form-group row mt-3 mb-3">
        <label asp-for="Department" class="col-sm-2  col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select ml-3"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                        <option value="">Please Select</option>
                    </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label asp-for="Photo" class="col-sm-2  col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
            <input asp-for="Photo" class="form-control ml-3 custom-file-input" />
            <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-10">
    <button type="submit" class="btn btn-primary btn-sm ">Create</button>
    </div>
    </div>
    
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
